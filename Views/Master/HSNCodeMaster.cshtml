@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <!-- Add/Edit form modal -->
    <div id="panelHSNCodeMasterEdit" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">HSN Master</h5>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmHSNCodeMaster" method="get">
                        <div class="form-group">
                            <label class="control-label col-sm-4">HSN Code<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="number" tabindex="1" placeholder="Enter HSN Code" maxlength="50" name="txtHSNCode" id="txtHSNCode" class="form-control required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">HSN Description<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="text" tabindex="2" placeholder="Enter HSN Description" maxlength="50" name="txtDescription" id="txtDescription" class="form-control required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Tax Name<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="text" tabindex="3" name="ddlTaxId" id="ddlTaxId" class="form-control required" placeholder="Enter Tax">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">GST (%)<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="number" tabindex="4" max="100" placeholder="Enter GST" name="txtGST" id="txtGST" class="form-control required">
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="control-label col-sm-4">From Date<span style="color:red"> *</span></label>
                                <div class="col-sm-8">
                                    <input type="text" tabindex="4" style="padding-left: 12px;" onchange="cleartodate()" name="txtStartDate" id="txtStartDate" class="datepicker form-control required">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">To Date<span style="color:red"> *</span></label>
                                <div class="col-sm-8">
                                    <input type="text" tabindex="5" style="padding: 0 13px;" name="txtEndDate" id="txtEndDate" class="datepicker form-control required">
                                </div>
                            </div>*@
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Is Active</label>
                            <div class="col-sm-8">
                                <input type="checkbox" tabindex="4" name="txtIsActive" checked class="icheckminimal" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    @if (Model.ISADD == 1 || Model.ISUPDATE == 1)
                    {
                        <button type="button" id="btnSaveHSNCodeMaster" class="btn btn-success btnSave" tabindex="7"><span class="fa fa-floppy-o"></span> Save</button>
                    }
                    <button name="CancelHSNCodeMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Add/Edit form modal -->
    <!-- Delete form modal -->
    <div id="panelHSNCodeMasterDelete" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">HSN Master</h5>
                </div>
                <form class="form-horizontal" id="frmCommon_CountryMaster" method="get">
                    <div class="modal-body">
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>HSN Code: </dt>
                                <dd id="delblHSNCode"></dd>
                            </dl>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (Model.ISDELETE == 1)
                        {
                            <button type="button" id="btnDeleteHSNCodeMaster" class="btn btn-danger btnDelete"><span class="fa fa-trash-o"></span> Delete</button>
                        }
                        <button name="CancelHSNCodeMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /Delete form modal -->

    <div class="panel" id="panelHSNCodeMasterList" style="display: block; margin-bottom: 0px;">
        <div class="row panel-heading">
            <div class="col-lg-7 pt-5 pl-0">
                <div class="clearfix">
                    <div class="caption">
                        <i class="fa fa-th-list"></i>
                        <span class="caption-subject font-common-sharp bold">HSN Master</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 pr-0">
                <div class="col-sm-8 txtR">
                    <div class="form-group has-feedback">
                        <input type="text" id="txtsearchbox" class="form-control searchbox" placeholder="Search Here..." autofocus>
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 pr-0 txtR">
                    @if (Model.ISADD == 1)
                    {
                        <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10 btnAddNew" type="button" id="btnAddHSNCodeMaster" style="font-weight:600!important"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New</button>
                    }
                    <button class="formstylebutton ExitWindow divflotR btn alpha-orange text-orange-800 border-orange-600 ml-5" type="button"><i class="fa fa-close"></i>&nbsp;&nbsp;Exit</button>
                </div>

            </div>
        </div>
        <div class="panel-body" style="padding: 0px 10px 18px 7px !important">
            <div class="col-sm-12" style="overflow-x:auto; overflow-y:hidden; ">
                <div class="jqGrid_wrapper" id="jqGrid_HSNCodeMaster">
                    <table id="table_HSNCodeMaster"></table>
                    <div id="pager_HSNCodeMaster"></div>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" id="hdnHSNId" value="" />
</div>

@section scripts{
    <script src="~/Scripts/MasterScripts/Master/HSNCodeMaster.js?v=@DateTime.UtcNow"></script>
    <script type="text/x-jsrender" id="TaxDropdownList">
        <option value="{{>taxid}}">{{>taxname}}</option>
    </script>
}


