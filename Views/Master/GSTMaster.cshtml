@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">

    <div class="panel" id="panelGSTMasterList" style="display: block; margin-bottom: 0px;">
        <div class="row panel-heading">
            <div class="col-lg-7 pt-5 pl-0">
                <div class="clearfix">
                    <div class="caption">
                        <i class="fa fa-th-list"></i>
                        <span class="caption-subject font-common-sharp bold">GST Master</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 pr-0">
                <div class="col-sm-8 txtR">
                    <div class="form-group has-feedback">
                        <input type="text" id="txtsearchbox" class="form-control searchbox" placeholder="Search Here..." autofocus>
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 pr-0 txtR">
                    @if (Model.ISADD == 1)
                    {
                        <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10 btnAddNew" type="button" id="btnAddGSTMaster" style="font-weight:600!important"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New</button>
                    }
                    <button class="formstylebutton ExitWindow divflotR btn alpha-orange text-orange-800 border-orange-600 ml-5 pull-right" type="button"><i class="fa fa-close"></i>&nbsp;&nbsp;Exit</button>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding: 0px 10px 18px 7px !important">
            <div class="col-sm-12" style="overflow-x:auto; overflow-y:hidden; ">
                <div class="jqGrid_wrapper" id="jqGrid_GSTMaster">
                    <table id="table_GSTMaster"></table>
                    <div id="pager_GSTMaster"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add/Edit form modal -->
    <div id="panelGSTMasterEdit" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">GST Master</h5>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmGSTCodeMaster" method="get">

                        <div class="form-group">
                            <label class="control-label col-sm-4">Account Name<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="text" tabindex="3" placeholder="Enter Party Name" name="txtAccountName" id="txtAccountName" class="form-control required" @*onkeyup="GSTMasterView.AccountAutoComplete()"*@>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Balance Sheet Group</label>
                            <div class="col-sm-8">
                                <select type="text" class="form-control" name="ddlBalnceSheetGroup" id="ddlBalnceSheetGroup"></select>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    @if (Model.ISADD == 1 || Model.ISUPDATE == 1)
                    {
                        <button type="button" id="btnSaveGSTMaster" class="btn btn-success btnSave" tabindex="9"><span class="fa fa-floppy-o"></span> Save</button>
                    }
                    <button name="CancelGSTMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Add/Edit form modal -->
    <!-- Delete form modal -->
    <div id="panelGSTMasterDelete" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">GST Master</h5>
                </div>
                <form class="form-horizontal" id="frmCommon_CountryMaster" method="get">
                    <div class="modal-body">
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Account Name: </dt>
                                <dd id="delblGSTCode"></dd>
                            </dl>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (Model.ISDELETE == 1)
                        {
                            <button type="button" id="btnDeleteGSTMaster" class="btn btn-danger btnDelete"><span class="fa fa-trash-o"></span> Delete</button>
                        }
                        <button name="CancelGSTMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /Delete form modal -->
    @*<input type="hidden" id="hdnGSTId">*@
</div>

@section scripts{
    <script src="~/Scripts/MasterScripts/Master/GSTMaster.js"></script>
    <script id="MenuDropdownList" type="text/x-jsrender">
        <option value="{{>menuid}}">{{>menuname.replaceAll('&amp;','&')}}</option>
    </script>
    <script id="BalnceSheetGroupList" type="text/x-jsrender">
        <option value="{{>balancesheetgroupid}}">{{>bsgroupname.replaceAll('&amp;','&')}}</option>
    </script>
}