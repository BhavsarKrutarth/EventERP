@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn-group {
        width: 100%;
    }

    li.multiselect-filter i {
        font-size: 13px;
        position: relative !important;
        left: unset !important;
        top: unset !important;
        margin-top: unset !important;
        opacity: .5;
        filter: alpha(opacity=50);
    }
</style>
<div class="page-container">
    <!-- Add/Edit form modal -->
    <div id="panelItemMasterEdit" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Item Master</h5>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmItemMaster" method="get">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Item Name<span style="color:red"> *</span></label>
                            <div class="col-sm-9">
                                <input type="text" tabindex="1" placeholder="Enter Item Name" name="txtItemName" id="txtItemName" class="form-control uppercase required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Short Name<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input type="text" tabindex="2" placeholder="Enter Short Name" name="txtShortName" id="txtShortName" class="form-control uppercase required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Item Group<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <select tabindex="3" name="ddlItemGroup" id="ddlItemGroup" class="form-control required"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Item Type<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <select tabindex="4" name="ddlItemType" id="ddlItemType" class="form-control required">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">HSN Code<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <select tabindex="9" name="ddlHsnCode" id="ddlHsnCode" class="form-control required"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Price<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input type="number" tabindex="10" placeholder="Enter Price" value="0" name="txtPrice" id="txtPrice" class="form-control">
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label class="control-label col-sm-3">Labour Rate<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input type="number" tabindex="11" value="0" placeholder="Enter Labour Rate" name="txtLabourRate" id="txtLabourRate" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3">Total Rate<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input type="number" disabled tabindex="12" value="0" placeholder="Enter Labour Rate" name="txtTotalRate" id="txtTotalRate" class="form-control">
                            </div>
                        </div>*@

                        <div class="form-group">
                            @*<label class="control-label col-sm-3">Size Maintain</label>
                            <div class="col-sm-1">
                                <input type="checkbox" tabindex="13" name="txtSizemantain" id="txtSizemantain" class="icheckminimal">
                            </div>
                            <label class="control-label col-sm-2">Auto MRP In Tag</label>
                            <div class="col-sm-1">
                                <input type="checkbox" tabindex="14" name="txtAutoMRPInTag" id="txtAutoMRPInTag" class="icheckminimal">
                            </div>*@
                            <label class="control-label col-sm-3">Is Active</label>
                            <div class="col-sm-1">
                                <input type="checkbox" tabindex="15" name="txtIsActive" id="txtIsActive" checked class="icheckminimal">
                            </div>
                        </div>

                </form>
            </div>
                <div class="modal-footer">
                    @if (Model.ISADD == 1 || Model.ISUPDATE == 1)
                    {
                        <button type="button" id="btnSaveItemMaster" class="btn btn-success btnSave" tabindex="14"><span class="fa fa-floppy-o"></span> Save</button>
                    }
                    <button name="CancelItemMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Add/Edit form modal -->
    <!-- Delete form modal -->
    <div id="panelItemMasterDelete" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Item Master</h5>
                </div>
                <form class="form-horizontal" id="frmCommon_CountryMaster" method="get">
                    <div class="modal-body">
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Item Name: </dt>
                                <dd id="delblItemName"></dd>
                            </dl>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (Model.ISDELETE == 1)
                        {
                            <button type="button" id="btnDeleteItemMaster" class="btn btn-danger btnDelete"><span class="fa fa-trash-o"></span> Delete</button>
                        }
                        <button name="CancelItemMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /Delete form modal -->
    <div class="panel" id="panelItemMasterList" style="display: block; margin-bottom: 0px;">
        <div class="row panel-heading">
            <div class="col-lg-7 pt-5 pl-0">
                <div class="clearfix">
                    <div class="caption">
                        <i class="fa fa-th-list"></i>
                        <span class="caption-subject font-common-sharp bold">Item Master</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 pr-0">
                <div class="col-sm-8 txtR">
                    <div class="form-group has-feedback">
                        <input type="text" id="txtsearchbox" class="form-control searchbox" placeholder="Search Here..." autofocus>
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>

                <div class="col-sm-4 pr-0 txtR">
                    @if (Model.ISADD == 1)
                    {
                        <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10 btnAddNew" type="button" id="btnAddItemMaster" style="font-weight:600!important"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New</button>
                    }
                    <button class="formstylebutton ExitWindow divflotR btn alpha-orange text-orange-800 border-orange-600 ml-5" type="button"><i class="fa fa-close"></i>&nbsp;&nbsp;Exit</button>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding: 0px 10px 18px 7px !important">
            <div class="col-sm-12" style="overflow-x:auto; overflow-y:hidden; ">
                <div class="jqGrid_wrapper" id="jqGrid_ItemMaster">
                    <table id="table_ItemMaster"></table>
                    <div id="pager_ItemMaster"></div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hdnItemId" value="" />
</div>

@section scripts{
    <script src="~/Scripts/MasterScripts/Master/ItemMaster.js?v=@DateTime.UtcNow"></script>
    <script type="text/x-jsrender" id="GroupDropdownList">
        <option value="{{>itemgroupmasterid}}">{{>itemgroupname}}</option>
    </script>
    <script type="text/x-jsrender" id="HSNDropdownList">
        <option value="{{>hsnid}}">{{>hsncode}} - GST({{>gst}} %)</option>
    </script>
    <script type="text/x-jsrender" id="SubItemTyperopdownList">
        <option value="{{>itemid}}">{{>itemname}}</option>
    </script>

}