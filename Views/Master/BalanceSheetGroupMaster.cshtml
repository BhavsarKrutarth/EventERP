
@{
    ViewBag.Title = "BalanceSheetGroupMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <!-- Add/Edit form modal -->
    <div id="panelBalanceSheetGroupMasterEdit" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Balance Sheet Group Master</h5>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="frmBalanceSheetGroupMaster" method="get">
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Group Code<span style="color:red"> </span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="" tabindex="0" name="txtBSGroupCode" id="txtBSGroupCode" autofocus>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Group Name<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control required uppercase" placeholder="" tabindex="1" name="txtBSGroupName" id="txtBSGroupName" autofocus>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Group Type<span style="color:red"> *</span></label>
                            <div class="col-sm-8">
                                <select class="form-control required" tabindex="2" name="ddlGroupType" id="ddlGroupTypeId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Report Group Type</label>
                            <div class="col-sm-8">
                                <select class="form-control" tabindex="3" name="ddlReportGroupType" id="ddlReportGroupType"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4 txtR">Is Active</label>
                            <div class="col-sm-3">
                                <input type="checkbox" name="txtIsActive" id="txtIsActive" checked class="icheckminimal" tabindex="4" />
                            </div>
                            @*<label class="control-label col-sm-4 txtR">Transfer Account To Other</label>
                                <div class="col-sm-1">
                                    <input type="checkbox" name="txtTATO" id="txtTATO" class="icheckminimal" tabindex="4" />
                                </div>*@
                        </div>
                        <div class="form-group">

                        </div>
                        <input type="text" id="hdnBalanceSheetGroupId" hidden />
                    </form>
                </div>
                <div class="modal-footer">
                    @if (Model.ISADD == 1 || Model.ISUPDATE == 1)
                    {
                        <button type="button" id="btnSaveBalanceSheetGroupMaster" class="btn btn-success btnSave" tabindex="5"><span class="fa fa-floppy-o"></span> Save</button>
                    }
                    <button name="CancelBalanceSheetGroupMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                </div>

            </div>
        </div>
    </div>
    <!-- Add/Edit form modal -->
    <!-- Delete form modal -->
    <div id="panelBalanceSheetGroupMasterDelete" class="modal fade" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Balance Sheet Group Master</h5>
                </div>
                <form class="form-horizontal" id="frmBSGroupMaster" method="get">
                    <div class="modal-body">
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Group Code: </dt>
                                <dd id="delblBSGroupCode"></dd>
                            </dl>
                        </div>
                        <div class="form-group">
                            <dl class="dl-horizontal">
                                <dt>Group Name: </dt>
                                <dd id="delblBSGroupName"></dd>
                            </dl>
                        </div>
                    </div>
                    <div class="modal-footer">
                        @if (Model.ISDELETE == 1)
                        {
                            <button type="button" id="btnDeleteBalanceSheetGroupMaster" class="btn btn-danger btnDelete"><span class="fa fa-trash-o"></span> Delete</button>
                        }
                        <button name="CancelBalanceSheetGroupMaster" class="btn bg-slate-400 btnCancel" type="button"><i class="fa fa-times"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /Delete form modal -->

    <div class="panel" id="panelBalanceSheetGroupMasterList" style="display: block; margin-bottom: 0px;">
        <div class="row panel-heading pb-0">
            <div class="col-lg-7 pt-5 pl-0">
                <div class="clearfix">
                    <div class="caption">
                        <i class="fa fa-th-list"></i>
                        <span class="caption-subject font-common-sharp bold">Balance Sheet Group Master</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 pr-0">
                <div class="col-sm-8 txtR">
                    <div class="form-group has-feedback">
                        <input type="text" id="txtsearchbox" class="form-control searchbox" placeholder="Search Here..." autofocus>
                        <div class="form-control-feedback">
                            <i class="icon-search4 text-size-base"></i>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 pr-0 txtR">
                    @if (Model.ISADD == 1)
                    {
                        <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10 btnAddNew" type="button" id="btnAddBalanceSheetGroupMaster" style="font-weight:600!important"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New</button>
                    }
                    <button class="formstylebutton ExitWindow divflotR btn alpha-orange text-orange-800 border-orange-600 ml-5" type="button"><i class="fa fa-close"></i>&nbsp;&nbsp;Exit</button>
                </div>
            </div>
        </div>
        <div class="panel-body" style="padding: 0px 10px 18px 7px !important">
            <div class="col-sm-12" style="overflow-x:auto; overflow-y:hidden; ">
                <div class="jqGrid_wrapper" id="jqgrid_BalanceSheetGroupMaster">
                    <table id="table_BalanceSheetGroupMaster"></table>
                    <div id="pager_BalanceSheetGroupMaster"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page container -->

@section Scripts{

    <script src="~/Scripts/MasterScripts/Master/BalanceSheetGroupMaster.js?v=@DateTime.UtcNow"></script>
    <script id="CommonMasterDetailDropdownList" type="text/x-jsrender">
        <option value="{{>commonmasterdetailid}}">{{>commonmasterdetailname.replaceAll('&amp;','&')}}</option>
    </script>
}
